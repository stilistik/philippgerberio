generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  username     String    @unique
  firstName    String
  lastName     String
  passwordHash String
  posts        Post[]
  projects     Project[]
}

model Post {
  id          String     @id @default(uuid())
  slug        String?    @unique
  title       String?
  description String?
  fullText    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    String
  thumbnail   String?
  published   Boolean    @default(false)
  author      User       @relation(fields: [authorId], references: [id])
  resources   Resource[]
}

model Project {
  id          String     @id @default(uuid())
  slug        String?    @unique
  title       String?
  description String?
  fullText    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    String
  thumbnail   String?
  published   Boolean    @default(false)
  author      User       @relation(fields: [authorId], references: [id])
  resources   Resource[]
}

model Resource {
  id        String   @id @default(uuid())
  url       String
  postId    String?
  projectId String?
  mimetype  String
  name      String
  post      Post?    @relation(fields: [postId], references: [id])
  project   Project? @relation(fields: [projectId], references: [id])
}
